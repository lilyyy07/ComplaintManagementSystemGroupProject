@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
<body class="home-page">

<div class="container mt-5 fade-in">
    <div class="home-hero fade-in fade-delay-1">
        <h1>Welcome to the Complaint Management System 🌷</h1>
        <p>
            Empowering users to report issues and helping admins manage complaints effectively.
            Every voice matters, and every issue finds its solution here.
        </p>
    </div>

    <div class="row mt-5 fade-in fade-delay-2">
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h4>📩 Easy Submissions</h4>
                <p>Submit complaints quickly with a simple, friendly form.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h4>⏱️ Real-Time Tracking</h4>
                <p>Stay updated on your complaint’s progress at every stage.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <h4>🤝 Transparent Communication</h4>
                <p>Encouraging collaboration for faster, more effective solutions.</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5 fade-in fade-delay-3">
        <a asp-action="About" class="btn btn-success px-4 me-2">Learn More</a>
        <a asp-action="FAQ" class="btn btn-warning px-4">View FAQs</a>
    </div>
</div>
</body>
