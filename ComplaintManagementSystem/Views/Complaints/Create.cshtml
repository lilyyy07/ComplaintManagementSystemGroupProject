@model ComplaintManagementSystem.Models.Complaint

@{
    ViewData["Title"] = "Submit Complaint";
    Layout = "_Layout";
}
<body class="form-page">
    <div class="form-container">
            <div class="form-card p-4 shadow-sm form-card">
            <h2 class="text-center mb-4 text-primary">📝 Submit a New Complaint</h2>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Complaint Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter your complaint title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Complaint Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your issue in detail"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="UserID" value="3" />

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">Submit Complaint</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
