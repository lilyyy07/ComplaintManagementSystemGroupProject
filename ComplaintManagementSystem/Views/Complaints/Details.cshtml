@model ComplaintManagementSystem.Models.Complaint

@{
    ViewData["Title"] = "Complaint Details";
}

<body class="complaint-details-page">

    <div class="container mt-5">
        <div class="card shadow-sm p-4" style="background-color: rgba(255, 250, 245, 0.9);">
            <h2 class="text-center mb-4 text-info">🔍 Complaint Details</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <dl class="row">
                <dt class="col-sm-3">Complaint ID</dt>
                <dd class="col-sm-9">@Model.ComplaintID</dd>

                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Status == "Pending")
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                    else if (Model.Status == "In Progress")
                    {
                        <span class="badge bg-info">In Progress</span>
                    }
                    else if (Model.Status == "Resolved")
                    {
                        <span class="badge bg-success">Resolved</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Status</span>
                    }
                </dd>

                <dt class="col-sm-3">Date Created</dt>
                <dd class="col-sm-9">@Model.DateCreated.ToString("dd MMM yyyy hh:mm tt")</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-primary px-4">Back to List</a>
            </div>
        </div>
    </div>
</body>
